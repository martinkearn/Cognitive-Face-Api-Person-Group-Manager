@model PersonGroupSample.ViewModels.PersonCreate

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Person</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PersonGroupId" class="control-label"></label>
                <input asp-for="PersonGroupId" class="form-control" />
                <span asp-validation-for="PersonGroupId" class="text-danger"></span>
            </div>
            <div class="form-group hidden">
                <label asp-for="@Model.Person.personId" class="control-label"></label>
                <input asp-for="@Model.Person.personId" class="form-control" />
                <span asp-validation-for="@Model.Person.personId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Person.name" class="control-label"></label>
                <input asp-for="@Model.Person.name" class="form-control" />
                <span asp-validation-for="@Model.Person.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Person.userData" class="control-label"></label>
                <input asp-for="@Model.Person.userData" class="form-control" />
                <span asp-validation-for="@Model.Person.userData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Delete", "Delete", new { personGroupId = Model.PersonGroupId , id = Model.Person.persistedFaceIds}) |
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
