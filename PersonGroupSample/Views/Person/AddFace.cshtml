@model PersonGroupSample.Models.Face

@{
    ViewData["Title"] = "AddFace";
}

<h2>AddFace</h2>

<h4>Face</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddFace" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="personGroupId" class="control-label"></label>
                <input asp-for="personGroupId" class="form-control" readonly />
                <span asp-validation-for="personGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="personId" class="control-label"></label>
                <input asp-for="personId" class="form-control" readonly />
                <span asp-validation-for="personId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userData" class="control-label"></label>
                <input asp-for="userData" class="form-control" />
                <span asp-validation-for="userData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="targetFace" class="control-label"></label>
                <input asp-for="targetFace" class="form-control" />
                <span asp-validation-for="targetFace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="faceImage" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input type="file" name="file" id="file" class="form-control input-lg">
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
